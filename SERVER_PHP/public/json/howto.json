                "disable_array_reorder": true,
                "format": "grid",
                "grid_columns": 12,
                "collapsed": true
            }
        },
        "supply": {
            "type": "array",
            "title": "nguyên liệu supply",
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "@type": {
                        "type": "string",
                        "default": "HowToSupply",
                        "propertyOrder": 1,
                        "options":{
                            "hidden":true
                        }
                    },
                    "name": {
                        "type":"string"
